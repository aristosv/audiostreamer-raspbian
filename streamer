echo updating
apt-get update > /dev/null 2>&1

echo upgrading
apt-get -y upgrade > /dev/null 2>&1

echo install omxplayer
sudo apt-get install -y omxplayer > /dev/null 2>&1

echo install sshpass
sudo apt-get install -y sshpass > /dev/null 2>&1

echo install ssmtp
sudo apt-get install -y ssmtp > /dev/null 2>&1

echo clean
sudo apt-get clean > /dev/null 2>&1

echo remove default pi password warning
sudo rm /etc/profile.d/sshpwd.sh

echo hush login
touch /home/pi/.hushlogin

echo create stream service
start_stream ()
{
sudo bash -c 'cat > /etc/systemd/system/stream.service' << 'EOL'
[Unit]
Description=start stream
After=network.target

[Service]
Environment=streamurl=https://radio.bbxmd.com/radio/8000/radio.mp3?1550345344
ExecStart=/bin/bash -c "omxplayer $streamurl"
Restart=always

[Install]
WantedBy=multi-user.target
EOL

sudo systemctl daemon-reload
sudo systemctl enable stream.service > /dev/null 2>&1
}

start_stream
