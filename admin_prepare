#!/bin/bash

echo update
sudo apt-get update

echo upgrade
sudo apt-get -y upgrade

echo install omxplayer
sudo apt-get install -y omxplayer

echo install dbuscontrol
sudo wget --no-check-certificate https://raw.githubusercontent.com/popcornmix/omxplayer/master/dbuscontrol.sh -P /usr/lib/
sudo chmod +x /usr/lib/dbuscontrol.sh

echo install sshpass
sudo apt-get install -y sshpass

echo install ssmtp
sudo apt-get install -y ssmtp

echo clean
sudo apt-get clean

echo set timezone
sudo timedatectl set-timezone Asia/Nicosia

echo remove default pi password warning
sudo rm /etc/profile.d/sshpwd.sh

echo hush login
touch /home/pi/.hushlogin
