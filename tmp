if [ $(curl -s --head -w %{http_code} $streamurl -o /dev/null) -eq 200 ]
 then
  echo stream is up
  if [ $(sudo systemctl is-active localaudio.service) -eq active ]
   then
    sudo systemctl stop localaudio.service
    sudo systemctl disable localaudio.service
  if [ $(sudo systemctl is-active stream.service) -eq inactive ]
   sudo systemctl start stream.service
   sudo systemctl enable stream.service

elif [ $(curl -s --head -w %{http_code} $streamurl -o /dev/null) -eq 502 ]
 then
  echo stream is down
  if [ $(sudo systemctl is-active localaudio.service) -eq inactive ]
   then
    sudo systemctl start localaudio.service
    sudo systemctl enable localaudio.service
  if [ $(sudo systemctl is-active stream.service) -eq active ]
   sudo systemctl stop stream.service
   sudo systemctl disable stream.service
fi
